<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/round"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.saiful.musicplayer.Player">

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round" />

    <Button
        android:id="@+id/btPlay"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btFV"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round"
        android:text="||" />

    <Button
        android:id="@+id/btFV"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btPv"
        android:layout_toEndOf="@+id/btPv"
        android:background="@drawable/round"
        android:text="&lt;&lt;" />

    <Button
        android:id="@+id/btFF"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btPlay"
        android:layout_toStartOf="@+id/btNxt"
        android:background="@drawable/round"
        android:text=">>" />

    <Button
        android:id="@+id/btPv"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/round"
        android:text="|&lt;" />

    <Button
        android:id="@+id/btNxt"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btFF"
        android:background="@drawable/round"
        android:text=">|" />

    <TextView
        android:id="@+id/show"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/seekBar"
        android:layout_marginTop="73dp"
        android:background="@drawable/round"
        android:text="" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:id="@+id/editText"
        android:background="@drawable/round"
        android:layout_below="@+id/btFV"
        android:layout_alignParentStart="true"
        android:layout_marginTop="63dp"
        android:layout_alignEnd="@+id/btNxt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:text="search"
        android:background="@drawable/round"
        android:id="@+id/search"
        android:onClick="search"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
