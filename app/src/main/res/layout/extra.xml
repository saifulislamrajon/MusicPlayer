<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/round2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.saiful.musicplayer.Player">

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btPlay"
        android:layout_marginTop="54dp" />

    <Button
        android:id="@+id/btPlay"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/btFV"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round2"
        android:text="||" />

    <Button
        android:id="@+id/btFV"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/btPv"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/btPv"
        android:background="@drawable/round2"
        android:text="&lt;&lt;" />

    <Button
        android:id="@+id/btFF"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/btPlay"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/btNxt"
        android:background="@drawable/round2"
        android:text=">>" />

    <Button
        android:id="@+id/btPv"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/show"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="79dp"
        android:background="@drawable/round2"
        android:text="|&lt;" />

    <Button
        android:id="@+id/btNxt"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btFF"
        android:layout_marginRight="10dp"
        android:background="@drawable/round2"
        android:text=">|" />

    <TextView
        android:id="@+id/show"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/text2"
        android:layout_marginTop="105dp"
        android:background="@drawable/round"
        android:textAlignment="center" />


    <!--<AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New AutoCompleteTextView"
        android:id="@+id/autoCompleteTextView"
        android:layout_below="@+id/btPlay"
        android:layout_marginTop="29dp"
        android:layout_alignStart="@+id/btPv"
        android:layout_alignEnd="@+id/btNxt" />-->

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_alignEnd="@+id/btNxt"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btFV"
        android:layout_marginTop="100dp"
        android:background="@drawable/round"
        android:hint=" Search hear" />

    <Button
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btFF"
        android:background="@drawable/round2"
        android:onClick="search"
        android:text="search" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="“Music is like a dream. One that I cannot hear.”"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
